# ===========================================
# ReEscape Bot 配置文件 v2.0
# ===========================================

# 基础配置
HOSTADD=your_host_address
HttpPort=8088
GROUPID=your_group_id
TARGETID=your_target_id

# AI 配置
AI_KEY=your_openai_api_key
AI_BASEURL=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo
AI_PROMPT=你是一个友善的AI助手，能够理解用户的情感需求。

# AI 增强配置
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TIMEOUT=30
AI_RETRY_COUNT=3
AI_RATE_LIMIT=20

# 调度器配置
ENABLE_NATURAL_SCHEDULER=true
ENABLE_EMOTIONAL_MEMORY=true
ACTIVE_HOURS=9,10,11,14,15,16,19,20,21
SLEEP_HOURS=0,1,2,3,4,5,6,7,8,22,23
BASE_INTERVAL=45
RANDOM_FACTOR=0.5

# 状态管理配置
STATE_IDLE_TIMEOUT=30
STATE_COMFORT_THRESHOLD=5
STATE_ENCOURAGE_THRESHOLD=3
STATE_LONG_CHAT_MIN_LENGTH=10
STATE_MAX_CONVERSATION_LEN=50

# 日志配置
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_MAX_FILES=7
LOG_MAX_SIZE=10

# 存储配置
DATA_DIR=./data
LOG_DIR=./logs
BACKUP_DIR=./backup

# 功能开关
ENABLE_DEBUG_MODE=false
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=false
ENABLE_AUTO_BACKUP=true
